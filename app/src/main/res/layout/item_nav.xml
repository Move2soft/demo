<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_5"
            android:src="@drawable/ic_company" />

        <com.fireball.demo.customviews.RobotoRegularTextview
            android:id="@+id/tvName"
            style="@style/txt_light_black_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/value_20"
            android:layout_weight="0.8"
            android:singleLine="false"
            android:text="Ankita Dholariya" />



    </LinearLayout>


</LinearLayout>
